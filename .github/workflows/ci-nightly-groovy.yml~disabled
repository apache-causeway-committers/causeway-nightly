name: Nightly Groovy

on:
  push:

jobs:
  build:
    name: groovy
    runs-on: ubuntu-latest
    env:
      ## to be shared amoung all steps of this job ...
      
      ## used only for printing
      TIMESTAMP: ${{ github.event.head_commit.timestamp }}
      
    steps:
    
    - name: Set up JDK 11
      uses: actions/setup-java@v1
      with:
        java-version: 11
       
    - name: Setup Groovy
      run: sudo apt-get -f install groovy
      
    - name: Pring Groovy Version
      shell: bash
      run: groovy --version 

 
